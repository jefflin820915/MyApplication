<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/third_page_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@mipmap/bar_icon_back_white"
        app:title="SecondPage"
        app:titleTextColor="#FFFF"
        tools:targetApi="lollipop"></androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/third_img_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/third_id_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="id: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/third_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/third_id_text_view"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:text="title: "
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>